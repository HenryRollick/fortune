<h1>Editing platitude</h1>

<% form_for(@platitude) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :source %><br />
    <%= f.text_field :source %>
  </p>
  <p>
    <%= f.label :quotation %><br />
    <%= f.text_area :quotation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @platitude %> |
<%= link_to 'Back', platitudes_path %>